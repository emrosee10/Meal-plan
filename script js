document.getElementById("show-meal-plan").addEventListener("click", function() {
    const gender = document.getElementById("gender").value;
    const diet = document.getElementById("diet").value;
    const weight = document.getElementById("weight").value;
    const selectedMeals = [];

    // Check if each meal button is selected
    if (document.getElementById("breakfast").classList.contains("selected")) {
        selectedMeals.push("Breakfast");
    }
    if (document.getElementById("lunch").classList.contains("selected")) {
        selectedMeals.push("Lunch");
    }
    if (document.getElementById("dinner").classList.contains("selected")) {
        selectedMeals.push("Dinner");
    }

    // Check if any meal is selected
    if (selectedMeals.length === 0) {
        alert("Please select at least one meal type.");
        return;
    }

    // Example meal plan data (for demonstration purposes)
    const meals = {
        "Breakfast": ["Oatmeal", "Smoothie", "Pancakes", "Eggs", "Toast", "Yogurt", "Cereal", "Fruit Salad", "Granola", "Muffins"],
        "Lunch": ["Grilled Chicken", "Salad", "Pasta", "Sandwich", "Rice & Beans", "Veggie Wrap", "Soup", "Tacos", "Burrito", "Quinoa Salad"],
        "Dinner": ["Steak", "Vegan Curry", "Soup", "Vegetable Stir-fry", "Fish", "Chicken Stir-fry", "Spaghetti", "Salmon", "Pizza", "Risotto"]
    };

    // Generate meal plan as a table
    let mealPlan = '<h2>Selected Meal Plan</h2><table><tr><th>Meal Type</th><th>Meals</th></tr>';
    
    selectedMeals.forEach(mealType => {
        mealPlan += `<tr><td>${mealType}</td><td>${meals[mealType].join(", ")}</td></tr>`;
    });

    mealPlan += '</table>';

    // Insert meal plan into the page
    document.getElementById("meal-plan").innerHTML = mealPlan;
    document.getElementById("meal-plan").style.display = "block";  // Ensure it's visible
});

// Toggle meal selection when buttons are clicked
document.querySelectorAll(".meal-btn").forEach(button => {
    button.addEventListener("click", () => {
        button.classList.toggle("selected");
        button.style.backgroundColor = button.classList.contains("selected") ? "#45a049" : "#4CAF50";
    });
});
